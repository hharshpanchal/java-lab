// No package declaration needed
class Person {
    public String name; // Public member variable

    // Constructor
    public Person(String name) {
        this.name = name;
    }

    // Method to display name
    public void display() {
        System.out.println("Name: " + name);
    }
}

public class Main {
    public static void main(String[] args) {
        // Create an object of the Person class
        Person p1 = new Person("Alice");
        
        // Access and modify the public member variable
        System.out.println("Before Modification: " + p1.name);
        p1.name = "Bob"; // Modifying the member variable
        System.out.println("After Modification: " + p1.name);
        
        // Call the display method
        p1.display();
    }
}
